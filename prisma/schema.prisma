// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(cuid())
  email              String    @unique
  username           String    @unique
  name               String?
  password           String
  department         String?
  role               String    @default("USER") // USER, ADMIN, HRD, TEKNISI
  // Personal data fields (encrypted)
  photoEnc           String?   @db.Text // Encrypted: URL to photo
  phoneEnc           String?   @db.Text // Encrypted: Phone number  
  addressEnc         String?   @db.Text // Encrypted: Full address
  ktpNumberEnc       String?   @db.Text // Encrypted: KTP number
  contractEndDateEnc String?   @db.Text // Encrypted: Contract end date
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  transactions       Transaction[]
  logs               LogActivity[]
  orders             Order[]
  attendances        Attendance[]
  payrolls           Payroll[]
}

model Attendance {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date         DateTime
  clockInEnc   String?  @db.Text // Encrypted: ISO datetime string
  clockOutEnc  String?  @db.Text // Encrypted: ISO datetime string
  isHoliday    Boolean  @default(false)
  statusEnc    String?  @db.Text // Encrypted: 'PRESENT', 'SICK', 'PERMIT', 'LEAVE'
  notesEnc     String?  @db.Text // Encrypted: notes
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([userId, date])
}

model WorkSchedule {
  id        String   @id @default(cuid())
  dayOfWeek Int      @unique // 0=Sunday, 1=Monday, ..., 6=Saturday
  dayName   String   // Display name: Senin, Selasa, etc.
  startTime String?  // Format: "HH:MM"
  endTime   String?  // Format: "HH:MM"
  isWorkDay Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CustomWorkSchedule {
  id        String   @id @default(cuid())
  startDate DateTime // Start date of the custom period
  endDate   DateTime // End date of the custom period
  startTime String   // Format: "HH:MM" (jam masuk)
  endTime   String   // Format: "HH:MM" (jam pulang)
  reason    String   // Keterangan (e.g., "Jam Ramadan", "Event Khusus")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LogActivity {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date      DateTime // Stores the date part (time usually 00:00:00)
  activity  String   @db.Text
  problem   String?  @db.Text
  image     String?  // Optional image path for activity documentation
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, date])
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  recipes   Recipe[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id                String             @id @default(cuid())
  name              String
  sku               String?            @unique
  stock             Float              @default(0)
  lowStockThreshold Float              @default(5)
  image             String?
  notes             String?
  drawerLocation    String?            // e.g., "RK01-05"
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  recipeIngredients RecipeIngredient[] // Relation to RecipeIngredient
  transactions      Transaction[]
}

model Transaction {
  id        String   @id @default(cuid())
  type      String // IN, OUT, BOM_ADD, BOM_REMOVE
  quantity  Float
  productId String?
  product   Product? @relation(fields: [productId], references: [id], onDelete: Cascade)
  recipeId  String?
  recipe    Recipe?  @relation(fields: [recipeId], references: [id], onDelete: SetNull)
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  description String?
  createdAt DateTime @default(now())
}

model Recipe {
  id           String             @id @default(cuid())
  name         String
  productionId String             @default("-") // Required Production ID (moved from Product)
  description  String?
  categoryId   String?
  category     Category?          @relation(fields: [categoryId], references: [id])
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  ingredients  RecipeIngredient[]
  sections     RecipeSection[]
  transactions Transaction[]
  productionPlans ProductionPlan[]
}

model ProductionPlan {
  id               String   @id @default(cuid())
  recipeId         String
  recipe           Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  quantity         Float
  month            Int
  year             Int
  status           String   @default("PENDING") // PENDING, COMPLETED
  sectionsSnapshot String?  @db.Text // JSON snapshot of sections at creation time (nullable to avoid MySQL TEXT default value error)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  units            ProductionUnit[]
}

model ProductionUnit {
  id               String   @id @default(cuid())
  productionPlanId String
  productionPlan   ProductionPlan @relation(fields: [productionPlanId], references: [id], onDelete: Cascade)
  unitNumber       Int
  productIdentifier String? // Serial Number / ID
  customId         String? // Custom ID (manual input)
  completed        String?  @db.Text // JSON string of completed ingredient IDs (nullable for MySQL TEXT compatibility)
  
  // Sales & Packing Tracking
  isPacked         Boolean  @default(false)
  isSold           Boolean  @default(false)
  marketplace      String?
  customer         String?
  link             String?  // URL for QR code generation

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  // Timestamps for Daily Output Control
  assembledAt      DateTime?
  packedAt         DateTime?
  
  issues           ProductionIssue[]
}

model ProductionIssue {
  id               String   @id @default(cuid())
  productionUnitId String
  productionUnit   ProductionUnit @relation(fields: [productionUnitId], references: [id], onDelete: Cascade)
  description      String
  resolution       String?  // How the issue was resolved
  isResolved       Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model RecipeSection {
  id          String             @id @default(cuid())
  name        String
  category    String?
  recipeId    String
  recipe      Recipe             @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  ingredients RecipeIngredient[]
  order       Int                @default(0)
  createdAt   DateTime           @default(now())
}

model RecipeIngredient {
  id        String   @id @default(cuid())
  recipeId  String
  recipe    Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  sectionId String?
  section   RecipeSection? @relation(fields: [sectionId], references: [id])
  quantity  Float
  notes     String?
}

model SectionCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Rack {
  id            String   @id @default(cuid())
  name          String   @unique
  drawerCount   Int      @default(0)
  unusedDrawers Int      @default(0)
  description   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Order {
  id          String      @id @default(cuid())
  orderNumber String      @unique  // Format: ORD-YYYYMMDD-XXX
  userId      String?
  user        User?       @relation(fields: [userId], references: [id])
  items       OrderItem[]
  createdAt   DateTime    @default(now())
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId   String
  productName String   // Snapshot nama produk
  productSku  String?  // Snapshot SKU
  productNote String?  // Snapshot notes
  quantity    Float
  createdAt   DateTime @default(now())
}

model MachineAsset {
  id            String   @id @default(cuid())
  name          String          // Nama mesin/alat (wajib)
  code          String?         // Kode (opsional)
  specification String?  @db.Text  // Spesifikasi (opsional)
  location      String          // Lokasi (wajib)
  price         Float?          // Harga (opsional)
  notes         String?  @db.Text  // Keterangan (opsional)
  image         String?         // Gambar (opsional)
  year          Int?            // Tahun pembelian (opsional)
  usefulLife    Int?            // Umur ekonomis dalam tahun (opsional)
  residualValue Float?          // Nilai residu (opsional)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model ServiceRobot {
  id              String   @id @default(cuid())
  entryDate       DateTime @default(now())  // Tanggal masuk
  customerName    String                     // Nama pelanggan
  customerAddress String   @db.Text          // Alamat
  customerPhone   String                     // No HP
  robotType       String                     // Jenis robot
  accessories     String?  @db.Text          // Kelengkapan
  warrantyStatus  String   @default("TIDAK") // Status garansi: YA / TIDAK
  complaint       String   @db.Text          // Keluhan
  serviceStatus   String   @default("PENDING") // Status service: PENDING, IN_PROGRESS, DONE, DELIVERED
  serviceNotes    String?  @db.Text          // Keterangan yang di service apa saja
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model SparepartProject {
  id        String   @id @default(cuid())
  name      String
  sku       String?
  stock     Float    @default(0)
  notes     String?  @db.Text
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SalaryComponent {
  id        String   @id @default(cuid())
  name      String
  type      String   // "DEDUCTION" or "ADDITION"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  payrollItems PayrollItem[]

  @@unique([name, type])
}

model Payroll {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  month     Int      // Kept for unique constraint/indexing
  year      Int      // Kept for unique constraint/indexing
  monthEnc  String   @db.Text // Encrypted month for secure storage
  yearEnc   String   @db.Text // Encrypted year for secure storage
  basicSalaryEnc String @db.Text // Encrypted Float
  netSalaryEnc   String @db.Text // Encrypted Float
  salarySlipEnc  String? @db.Text // Encrypted: Path to PDF file

  items     PayrollItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, month, year])
}

model PayrollItem {
  id        String   @id @default(cuid())
  payrollId String
  payroll   Payroll  @relation(fields: [payrollId], references: [id], onDelete: Cascade)
  componentId String
  component SalaryComponent @relation(fields: [componentId], references: [id])
  amountEnc String @db.Text // Encrypted Float
}

model HRDocument {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  link        String?  @db.Text
  filePath    String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
