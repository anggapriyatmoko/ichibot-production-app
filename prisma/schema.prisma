generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String        @id @default(cuid())
  email              String        @unique
  username           String        @unique
  name               String?
  password           String
  department         String?
  role               String        @default("USER")
  photoEnc           String?       @db.Text
  phoneEnc           String?       @db.Text
  addressEnc         String?       @db.Text
  ktpNumberEnc       String?       @db.Text
  contractEndDateEnc String?       @db.Text
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  attendances        Attendance[]
  logs               LogActivity[]
  orders             Order[]
  payrolls           Payroll[]
  transactions       Transaction[]
  assignedProjects   Project[]
  overtimeLeaves     OvertimeLeave[]
  targetedAnnouncements Announcement[] @relation("TargetedUsers")
  createdAnnouncements  Announcement[] @relation("CreatedAnnouncements")
  chatParticipants      ChatParticipant[]
  chatMessages          ChatMessage[]
}

model Attendance {
  id          String   @id @default(cuid())
  userId      String
  date        DateTime
  clockInEnc  String?  @db.Text
  clockOutEnc String?  @db.Text
  isHoliday   Boolean  @default(false)
  statusEnc   String?  @db.Text
  notesEnc    String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
}

model WorkSchedule {
  id        String   @id @default(cuid())
  dayOfWeek Int      @unique
  dayName   String
  startTime String?
  endTime   String?
  isWorkDay Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CustomWorkSchedule {
  id        String   @id @default(cuid())
  startDate DateTime
  endDate   DateTime
  startTime String
  endTime   String
  reason    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LogActivity {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime
  activity  String   @db.Text
  problem   String?  @db.Text
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  recipes   Recipe[]
}

model Product {
  id                String             @id @default(cuid())
  name              String
  sku               String?            @unique
  stock             Float              @default(0)
  lowStockThreshold Float              @default(5)
  image             String?
  notes             String?
  drawerLocation    String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  recipeIngredients RecipeIngredient[]
  transactions      Transaction[]
}

model Transaction {
  id          String   @id @default(cuid())
  type        String
  quantity    Float
  productId   String?
  recipeId    String?
  userId      String?
  description String?
  createdAt   DateTime @default(now())
  product     Product? @relation(fields: [productId], references: [id], onDelete: Cascade)
  recipe      Recipe?  @relation(fields: [recipeId], references: [id])
  user        User?    @relation(fields: [userId], references: [id])

  @@index([productId], map: "Transaction_productId_fkey")
  @@index([recipeId], map: "Transaction_recipeId_fkey")
  @@index([userId], map: "Transaction_userId_fkey")
}

model Recipe {
  id              String             @id @default(cuid())
  name            String
  productionId    String             @default("-")
  description     String?
  categoryId      String?
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  productionPlans ProductionPlan[]
  category        Category?          @relation(fields: [categoryId], references: [id])
  ingredients     RecipeIngredient[]
  sections        RecipeSection[]
  transactions    Transaction[]

  @@index([categoryId], map: "Recipe_categoryId_fkey")
}

model ProductionPlan {
  id               String           @id @default(cuid())
  recipeId         String
  quantity         Float
  month            Int
  year             Int
  status           String           @default("PENDING")
  sectionsSnapshot String?          @db.Text
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  recipe           Recipe           @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  units            ProductionUnit[]

  @@index([recipeId], map: "ProductionPlan_recipeId_fkey")
}

model ProductionUnit {
  id                String            @id @default(cuid())
  productionPlanId  String
  unitNumber        Int
  productIdentifier String?
  customId          String?
  completed         String?           @db.Text
  isPacked          Boolean           @default(false)
  isSold            Boolean           @default(false)
  marketplace       String?
  customer          String?
  link              String?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  assembledAt       DateTime?
  packedAt          DateTime?
  issues            ProductionIssue[]
  productionPlan    ProductionPlan    @relation(fields: [productionPlanId], references: [id], onDelete: Cascade)

  @@index([productionPlanId], map: "ProductionUnit_productionPlanId_fkey")
}

model ProductionIssue {
  id               String         @id @default(cuid())
  productionUnitId String
  description      String
  resolution       String?
  isResolved       Boolean        @default(false)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  productionUnit   ProductionUnit @relation(fields: [productionUnitId], references: [id], onDelete: Cascade)

  @@index([productionUnitId], map: "ProductionIssue_productionUnitId_fkey")
}

model RecipeSection {
  id          String             @id @default(cuid())
  name        String
  category    String?
  recipeId    String
  order       Int                @default(0)
  createdAt   DateTime           @default(now())
  ingredients RecipeIngredient[]
  recipe      Recipe             @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@index([recipeId], map: "RecipeSection_recipeId_fkey")
}

model RecipeIngredient {
  id        String         @id @default(cuid())
  recipeId  String
  productId String
  sectionId String?
  quantity  Float
  notes     String?
  product   Product        @relation(fields: [productId], references: [id], onDelete: Cascade)
  recipe    Recipe         @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  section   RecipeSection? @relation(fields: [sectionId], references: [id])

  @@index([productId], map: "RecipeIngredient_productId_fkey")
  @@index([recipeId], map: "RecipeIngredient_recipeId_fkey")
  @@index([sectionId], map: "RecipeIngredient_sectionId_fkey")
}

model SectionCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Rack {
  id            String   @id @default(cuid())
  name          String   @unique
  drawerCount   Int      @default(0)
  unusedDrawers Int      @default(0)
  description   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Order {
  id          String      @id @default(cuid())
  orderNumber String      @unique
  userId      String?
  createdAt   DateTime    @default(now())
  user        User?       @relation(fields: [userId], references: [id])
  items       OrderItem[]

  @@index([userId], map: "Order_userId_fkey")
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  productId   String
  productName String
  productSku  String?
  productNote String?
  quantity    Float
  createdAt   DateTime @default(now())
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId], map: "OrderItem_orderId_fkey")
}

model MachineAsset {
  id            String   @id @default(cuid())
  name          String
  code          String?
  specification String?  @db.Text
  location      String
  price         Float?
  notes         String?  @db.Text
  image         String?
  purchaseDate  DateTime?
  usefulLife    Int?
  residualValue Float?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model ServiceRobot {
  id              String   @id @default(cuid())
  entryDate       DateTime @default(now())
  customerName    String
  customerAddress String   @db.Text
  customerPhone   String
  robotType       String
  accessories     String?  @db.Text
  warrantyStatus  String   @default("TIDAK")
  complaint       String   @db.Text
  serviceStatus   String   @default("PENDING")
  serviceNotes    String?  @db.Text
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  image           String?
}

model OfferLetter {
  id          String   @id @default(cuid())
  date        DateTime @default(now())
  number      String
  name        String
  institution String
  content     String   @db.Text
  link        String?  @db.Text
  filePath    String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Receipt {
  id          String   @id @default(cuid())
  date        DateTime @default(now())
  number      String
  name        String
  institution String
  content     String   @db.Text
  link        String?  @db.Text
  filePath    String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ReplyLetter {
  id          String   @id @default(cuid())
  date        DateTime @default(now())
  number      String
  name        String
  institution String
  content     String   @db.Text
  link        String?  @db.Text
  filePath    String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model MOU {
  id          String   @id @default(cuid())
  date        DateTime @default(now())
  number      String
  name        String
  institution String
  content     String   @db.Text
  link        String?  @db.Text
  filePath    String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SparepartProject {
  id        String   @id @default(cuid())
  name      String
  sku       String?
  stock     Float    @default(0)
  notes     String?  @db.Text
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SalaryComponent {
  id           String        @id @default(cuid())
  name         String
  type         String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  payrollItems PayrollItem[]

  @@unique([name, type])
}

model Payroll {
  id             String        @id @default(cuid())
  userId         String
  month          Int
  year           Int
  monthEnc       String        @db.Text
  yearEnc        String        @db.Text
  basicSalaryEnc String        @db.Text
  netSalaryEnc   String        @db.Text
  salarySlipEnc  String?       @db.Text
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  items          PayrollItem[]

  @@unique([userId, month, year])
}

model PayrollItem {
  id          String          @id @default(cuid())
  payrollId   String
  componentId String
  amountEnc   String          @db.Text
  component   SalaryComponent @relation(fields: [componentId], references: [id])
  payroll     Payroll         @relation(fields: [payrollId], references: [id], onDelete: Cascade)

  @@index([componentId], map: "PayrollItem_componentId_fkey")
  @@index([payrollId], map: "PayrollItem_payrollId_fkey")
}

model HRDocument {
  id          String   @id @default(cuid())
  name        String
  link        String?  @db.Text
  filePath    String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  description String?  @db.Text
}

model SystemSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model ProjectCategory {
  id        String    @id @default(cuid())
  name      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[]
}

model Project {
  id          String           @id @default(cuid())
  name        String
  client      String?
  date        DateTime?
  description String?          @db.Text
  status      String           @default("PENDING")
  categoryId  String?
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  category    ProjectCategory? @relation(fields: [categoryId], references: [id])
  links       ProjectLink[]
  assignedUsers User[]
}

model ProjectLink {
  id        String   @id @default(cuid())
  label     String
  url       String   @db.Text
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OvertimeLeave {
  id          String   @id @default(cuid())
  userId      String
  date        String
  type        String
  reason      String   @db.Text
  attachment  String?  @db.Text
  requesterName String?
  job           String?
  amount        String?
  adminNote     String?  @db.Text
  status      String
  createdAt   String
  updatedAt   String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Announcement {
  id          String   @id @default(cuid())
  content     String   @db.Text
  isActive    Boolean  @default(true)
  speed       Int      @default(12)
  creatorId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  targetUsers User[]   @relation("TargetedUsers")
  creator     User     @relation("CreatedAnnouncements", fields: [creatorId], references: [id])
}

model ChatRoom {
  id           String            @id @default(cuid())
  name         String?
  isGroup      Boolean           @default(false)
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  messages     ChatMessage[]
  participants ChatParticipant[]
}

model ChatParticipant {
  id         String   @id @default(cuid())
  chatRoomId String
  userId     String
  lastSeenAt DateTime @default(now())
  createdAt  DateTime @default(now())
  chatRoom   ChatRoom @relation(fields: [chatRoomId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([chatRoomId, userId])
  @@index([chatRoomId])
  @@index([userId])
}

model ChatMessage {
  id         String   @id @default(cuid())
  chatRoomId String
  senderId   String
  content    String   @db.Text
  createdAt  DateTime @default(now())
  chatRoom   ChatRoom @relation(fields: [chatRoomId], references: [id], onDelete: Cascade)
  sender     User     @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([chatRoomId])
  @@index([senderId])
}
