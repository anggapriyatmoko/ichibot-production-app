// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  name      String?
  password  String
  department String?
  role      String   @default("USER") // USER, ADMIN
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  transactions Transaction[]
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  recipes   Recipe[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id                String             @id @default(cuid())
  name              String
  sku               String?            @unique
  stock             Int                @default(0)
  lowStockThreshold Int                @default(5)
  image             String?
  notes             String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  recipeIngredients RecipeIngredient[] // Relation to RecipeIngredient
  transactions      Transaction[]
}

model Transaction {
  id        String   @id @default(cuid())
  type      String // IN, OUT, BOM_ADD, BOM_REMOVE
  quantity  Int
  productId String?
  product   Product? @relation(fields: [productId], references: [id], onDelete: Cascade)
  recipeId  String?
  recipe    Recipe?  @relation(fields: [recipeId], references: [id], onDelete: SetNull)
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  description String?
  createdAt DateTime @default(now())
}

model Recipe {
  id           String             @id @default(cuid())
  name         String
  description  String?
  categoryId   String?
  category     Category?          @relation(fields: [categoryId], references: [id])
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  ingredients  RecipeIngredient[]
  sections     RecipeSection[]
  transactions Transaction[]
  productionPlans ProductionPlan[]
}

model ProductionPlan {
  id        String   @id @default(cuid())
  recipeId  String
  recipe    Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  quantity  Int
  month     Int
  year      Int
  status    String   @default("PENDING") // PENDING, COMPLETED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  units     ProductionUnit[]
}

model ProductionUnit {
  id               String   @id @default(cuid())
  productionPlanId String
  productionPlan   ProductionPlan @relation(fields: [productionPlanId], references: [id], onDelete: Cascade)
  unitNumber       Int
  productIdentifier String? // Serial Number / ID
  customId         String? // Custom ID (manual input)
  completed        String   @default("[]") // JSON string of completed ingredient IDs
  
  // Sales & Packing Tracking
  isPacked         Boolean  @default(false)
  isSold           Boolean  @default(false)
  marketplace      String?
  customer         String?

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  // Timestamps for Daily Output Control
  assembledAt      DateTime?
  packedAt         DateTime?
  
  issues           ProductionIssue[]
}

model ProductionIssue {
  id               String   @id @default(cuid())
  productionUnitId String
  productionUnit   ProductionUnit @relation(fields: [productionUnitId], references: [id], onDelete: Cascade)
  description      String
  isResolved       Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model RecipeSection {
  id          String             @id @default(cuid())
  name        String
  recipeId    String
  recipe      Recipe             @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  ingredients RecipeIngredient[]
  order       Int                @default(0)
  createdAt   DateTime           @default(now())
}

model RecipeIngredient {
  id        String   @id @default(cuid())
  recipeId  String
  recipe    Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  sectionId String?
  section   RecipeSection? @relation(fields: [sectionId], references: [id])
  quantity  Int
  notes     String?
}
