generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model announcement {
  id          String   @id @default(cuid())
  isActive    Boolean  @default(true)
  speed       Int      @default(12)
  creatorId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  contentEnc  String   @db.Text
  creator     user     @relation("announcement_creatorIdTouser", fields: [creatorId], references: [id], map: "Announcement_creatorId_fkey")
  targetUsers user[]   @relation("targetedusers")

  @@index([creatorId], map: "Announcement_creatorId_fkey")
  @@map("Announcement")
}

model attendance {
  id          String   @id @default(cuid())
  userId      String
  date        DateTime
  clockInEnc  String?  @db.Text
  clockOutEnc String?  @db.Text
  isHoliday   Boolean  @default(false)
  statusEnc   String?  @db.Text
  notesEnc    String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        user     @relation(fields: [userId], references: [id], onDelete: Cascade, map: "Attendance_userId_fkey")

  @@unique([userId, date])
  @@map("Attendance")
}

model category {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  recipe    recipe[]

  @@map("Category")
}

model chatMessage {
  id         String   @id @default(cuid())
  chatRoomId String
  senderId   String
  createdAt  DateTime @default(now())
  contentEnc String?  @db.Text
  chatRoom   chatRoom @relation(fields: [chatRoomId], references: [id], onDelete: Cascade, map: "ChatMessage_chatRoomId_fkey")
  sender     user     @relation(fields: [senderId], references: [id], onDelete: Cascade, map: "ChatMessage_senderId_fkey")

  @@index([chatRoomId])
  @@index([senderId])
  @@map("ChatMessage")
}

model chatParticipant {
  id         String   @id @default(cuid())
  chatRoomId String
  userId     String
  lastSeenAt DateTime @default(now())
  createdAt  DateTime @default(now())
  chatRoom   chatRoom @relation(fields: [chatRoomId], references: [id], onDelete: Cascade, map: "ChatParticipant_chatRoomId_fkey")
  user       user     @relation(fields: [userId], references: [id], onDelete: Cascade, map: "ChatParticipant_userId_fkey")

  @@unique([chatRoomId, userId])
  @@index([chatRoomId])
  @@index([userId])
  @@map("ChatParticipant")
}

model chatRoom {
  id           String            @id @default(cuid())
  isGroup      Boolean           @default(false)
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  nameEnc      String?           @db.Text
  messages     chatMessage[]
  participants chatParticipant[]

  @@map("ChatRoom")
}

model customWorkSchedule {
  id        String   @id @default(cuid())
  startDate DateTime
  endDate   DateTime
  startTime String
  endTime   String
  reason    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("CustomWorkSchedule")
}

model hRDocument {
  id             String   @id @default(cuid())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  descriptionEnc String?  @db.Text
  filePathEnc    String?  @db.Text
  linkEnc        String?  @db.Text
  nameEnc        String   @db.Text

  @@map("HRDocument")
}

model logActivity {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime
  activity  String   @db.Text
  problem   String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  image     String?
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade, map: "LogActivity_userId_fkey")

  @@unique([userId, date])
  @@map("LogActivity")
}

model machineAsset {
  id            String    @id @default(cuid())
  name          String
  code          String?
  specification String?   @db.Text
  location      String
  price         Float?
  notes         String?   @db.Text
  image         String?
  usefulLife    Int?
  residualValue Float?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  purchaseDate  DateTime?

  @@map("MachineAsset")
}

model mOU {
  id             String   @id @default(cuid())
  date           DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  contentEnc     String   @db.Text
  filePathEnc    String?  @db.Text
  institutionEnc String   @db.Text
  linkEnc        String?  @db.Text
  nameEnc        String   @db.Text
  numberEnc      String   @db.Text

  @@map("mou")
}

model offerLetter {
  id             String   @id @default(cuid())
  date           DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  contentEnc     String   @db.Text
  filePathEnc    String?  @db.Text
  institutionEnc String   @db.Text
  linkEnc        String?  @db.Text
  nameEnc        String   @db.Text
  numberEnc      String   @db.Text

  @@map("offerletter")
}

model invitationLetter {
  id             String   @id @default(cuid())
  date           DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  contentEnc     String   @db.Text
  filePathEnc    String?  @db.Text
  institutionEnc String   @db.Text
  linkEnc        String?  @db.Text
  nameEnc        String   @db.Text
  numberEnc      String   @db.Text

  @@map("invitationletter")
}

model order {
  id          String      @id @default(cuid())
  orderNumber String      @unique
  userId      String?
  createdAt   DateTime    @default(now())
  user        user?       @relation(fields: [userId], references: [id], map: "Order_userId_fkey")
  items       orderitem[]

  @@index([userId], map: "Order_userId_fkey")
  @@map("Order")
}

model orderitem {
  id          String   @id @default(cuid())
  orderId     String
  productId   String
  productName String
  productSku  String?
  productNote String?
  quantity    Float
  createdAt   DateTime @default(now())
  order       order    @relation(fields: [orderId], references: [id], onDelete: Cascade, map: "OrderItem_orderId_fkey")

  @@index([orderId], map: "OrderItem_orderId_fkey")
  @@map("OrderItem")
}

model overtimeleave {
  id               String  @id @default(cuid())
  userId           String
  dateEnc          String  @db.Text
  typeEnc          String  @db.Text
  reasonEnc        String  @db.Text
  attachmentEnc    String? @db.Text
  requesterNameEnc String? @db.Text
  jobEnc           String? @db.Text
  amountEnc        String? @db.Text
  adminNoteEnc     String? @db.Text
  statusEnc        String  @db.Text
  createdAtEnc     String  @db.Text
  updatedAtEnc     String  @db.Text
  user             user    @relation(fields: [userId], references: [id], onDelete: Cascade, map: "OvertimeLeave_userId_fkey")

  @@index([userId], map: "OvertimeLeave_userId_fkey")
  @@map("overtimeleave")
}

model payroll {
  id             String        @id @default(cuid())
  userId         String
  monthYearHash  String        @default("")
  monthEnc       String        @db.Text
  yearEnc        String        @db.Text
  basicSalaryEnc String        @db.Text
  netSalaryEnc   String        @db.Text
  salarySlipEnc  String?       @db.Text
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  user           user          @relation(fields: [userId], references: [id], onDelete: Cascade, map: "Payroll_userId_fkey")
  payrollitem    payrollitem[]

  @@index([userId], map: "Payroll_userId_idx")
  @@unique([userId, monthYearHash])
  @@map("Payroll")
}

model payrollitem {
  id              String          @id @default(cuid())
  payrollId       String
  componentId     String
  amountEnc       String          @db.Text
  salarycomponent salaryComponent @relation(fields: [componentId], references: [id], map: "PayrollItem_componentId_fkey")
  payroll         payroll         @relation(fields: [payrollId], references: [id], onDelete: Cascade, map: "PayrollItem_payrollId_fkey")

  @@index([componentId], map: "PayrollItem_componentId_fkey")
  @@index([payrollId], map: "PayrollItem_payrollId_fkey")
  @@map("PayrollItem")
}

model product {
  id                String             @id @default(cuid())
  name              String
  sku               String?            @unique
  stock             Float              @default(0)
  lowStockThreshold Float              @default(5)
  image             String?
  notes             String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  drawerLocation    String?
  recipeIngredients recipeIngredient[]
  transactions      transaction[]

  @@map("Product")
}

model productionIssue {
  id               String         @id @default(cuid())
  productionUnitId String
  description      String
  isResolved       Boolean        @default(false)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  resolution       String?
  productionUnit   productionUnit @relation(fields: [productionUnitId], references: [id], onDelete: Cascade, map: "ProductionIssue_productionUnitId_fkey")

  @@index([productionUnitId], map: "ProductionIssue_productionUnitId_fkey")
  @@map("ProductionIssue")
}

model productionPlan {
  id               String           @id @default(cuid())
  recipeId         String
  quantity         Float
  month            Int
  year             Int
  status           String           @default("PENDING")
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  sectionsSnapshot String?          @db.Text
  recipe           recipe           @relation(fields: [recipeId], references: [id], onDelete: Cascade, map: "ProductionPlan_recipeId_fkey")
  units            productionUnit[]

  @@index([recipeId], map: "ProductionPlan_recipeId_fkey")
  @@map("ProductionPlan")
}

model productionUnit {
  id                String            @id @default(cuid())
  productionPlanId  String
  unitNumber        Int
  productIdentifier String?
  customId          String?
  completed         String?           @db.Text
  isPacked          Boolean           @default(false)
  isSold            Boolean           @default(false)
  marketplace       String?
  customer          String?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  assembledAt       DateTime?
  packedAt          DateTime?
  link              String?
  issues            productionIssue[]
  productionPlan    productionPlan    @relation(fields: [productionPlanId], references: [id], onDelete: Cascade, map: "ProductionUnit_productionPlanId_fkey")

  @@index([productionPlanId], map: "ProductionUnit_productionPlanId_fkey")
  @@map("ProductionUnit")
}

model project {
  id              String           @id @default(cuid())
  name            String
  client          String?
  date            DateTime?
  description     String?          @db.Text
  status          String           @default("PENDING")
  categoryId      String?
  startDate       DateTime?
  endDate         DateTime?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  projecttouser   projecttouser[]
  projectcategory projectcategory? @relation(fields: [categoryId], references: [id], map: "Project_categoryId_fkey")
  projectlink     projectlink[]

  @@index([categoryId], map: "Project_categoryId_fkey")
}

model projectcategory {
  id        String    @id @default(cuid())
  name      String    @unique(map: "ProjectCategory_name_key")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  project   project[]
}

model projectlink {
  id        String   @id @default(cuid())
  label     String
  url       String   @db.Text
  projectId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  project   project  @relation(fields: [projectId], references: [id], onDelete: Cascade, map: "ProjectLink_projectId_fkey")

  @@index([projectId], map: "ProjectLink_projectId_fkey")
}

model rack {
  id            String   @id @default(cuid())
  name          String   @unique
  drawerCount   Int      @default(0)
  unusedDrawers Int      @default(0)
  description   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("Rack")
}

model receipt {
  id             String   @id @default(cuid())
  date           DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  contentEnc     String   @db.Text
  filePathEnc    String?  @db.Text
  institutionEnc String   @db.Text
  linkEnc        String?  @db.Text
  nameEnc        String   @db.Text
  numberEnc      String   @db.Text

  @@map("receipt")
}

model recipe {
  id              String             @id @default(cuid())
  name            String
  description     String?
  categoryId      String?
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  productionId    String             @default("-")
  productionPlans productionPlan[]
  category        category?          @relation(fields: [categoryId], references: [id], map: "Recipe_categoryId_fkey")
  ingredients     recipeIngredient[]
  sections        recipeSection[]
  transaction     transaction[]

  @@index([categoryId], map: "Recipe_categoryId_fkey")
  @@map("Recipe")
}

model recipeIngredient {
  id        String         @id @default(cuid())
  recipeId  String
  productId String
  sectionId String?
  quantity  Float
  notes     String?
  product   product        @relation(fields: [productId], references: [id], onDelete: Cascade, map: "RecipeIngredient_productId_fkey")
  recipe    recipe         @relation(fields: [recipeId], references: [id], onDelete: Cascade, map: "RecipeIngredient_recipeId_fkey")
  section   recipeSection? @relation(fields: [sectionId], references: [id], map: "RecipeIngredient_sectionId_fkey")

  @@index([productId], map: "RecipeIngredient_productId_fkey")
  @@index([recipeId], map: "RecipeIngredient_recipeId_fkey")
  @@index([sectionId], map: "RecipeIngredient_sectionId_fkey")
  @@map("RecipeIngredient")
}

model recipeSection {
  id          String             @id @default(cuid())
  name        String
  recipeId    String
  order       Int                @default(0)
  createdAt   DateTime           @default(now())
  category    String?
  ingredients recipeIngredient[]
  recipe      recipe             @relation(fields: [recipeId], references: [id], onDelete: Cascade, map: "RecipeSection_recipeId_fkey")

  @@index([recipeId], map: "RecipeSection_recipeId_fkey")
  @@map("RecipeSection")
}

model replyLetter {
  id             String   @id @default(cuid())
  date           DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  contentEnc     String   @db.Text
  filePathEnc    String?  @db.Text
  institutionEnc String   @db.Text
  linkEnc        String?  @db.Text
  nameEnc        String   @db.Text
  numberEnc      String   @db.Text

  @@map("replyletter")
}

model salaryComponent {
  id          String        @id @default(cuid())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  nameEnc     String        @db.Text
  typeEnc     String        @db.Text
  typeHash    String
  payrollitem payrollitem[]

  @@unique([typeHash, nameEnc(length: 100)])
  @@map("SalaryComponent")
}

model sectioncategory {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("SectionCategory")
}

model serviceRobot {
  id              String   @id @default(cuid())
  entryDate       DateTime @default(now())
  customerName    String
  customerAddress String   @db.Text
  customerPhone   String
  robotType       String
  accessories     String?  @db.Text
  warrantyStatus  String   @default("TIDAK")
  complaint       String   @db.Text
  serviceStatus   String   @default("PENDING")
  serviceNotes    String?  @db.Text
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  image           String?

  @@map("ServiceRobot")
}

model sparepartProject {
  id        String   @id @default(cuid())
  name      String
  sku       String?
  stock     Float    @default(0)
  notes     String?  @db.Text
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("SparepartProject")
}

model systemSetting {
  id        String   @id @default(cuid())
  key       String   @unique(map: "SystemSetting_key_key")
  value     String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("systemsetting")
}

model transaction {
  id          String   @id @default(cuid())
  type        String
  quantity    Float
  productId   String?
  recipeId    String?
  userId      String?
  description String?
  createdAt   DateTime @default(now())
  product     product? @relation(fields: [productId], references: [id], onDelete: Cascade, map: "Transaction_productId_fkey")
  recipe      recipe?  @relation(fields: [recipeId], references: [id], map: "Transaction_recipeId_fkey")
  user        user?    @relation(fields: [userId], references: [id], map: "Transaction_userId_fkey")

  @@index([productId], map: "Transaction_productId_fkey")
  @@index([recipeId], map: "Transaction_recipeId_fkey")
  @@index([userId], map: "Transaction_userId_fkey")
  @@map("Transaction")
}

model user {
  id                    String            @id @default(cuid())
  emailEnc              String?           @db.Text
  emailHash             String?           @unique
  usernameEnc           String?           @db.Text
  usernameHash          String?           @unique
  nameEnc               String?           @db.Text
  password              String
  pinEnc                String?           @db.Text
  departmentEnc         String?           @db.Text
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt
  addressEnc            String?           @db.Text
  contractEndDateEnc    String?           @db.Text
  ktpNumberEnc          String?           @db.Text
  phoneEnc              String?           @db.Text
  photoEnc              String?           @db.Text
  roleEnc               String?           @db.Text
  createdAnnouncements  announcement[]    @relation("announcement_creatorIdTouser")
  attendances           attendance[]
  messages              chatMessage[]
  participants          chatParticipant[]
  activities            logActivity[]
  orders                order[]
  payrolls              payroll[]
  transactions          transaction[]
  projecttouser         projecttouser[]
  overtimeLeaves        overtimeleave[]
  targetedAnnouncements announcement[]    @relation("targetedusers")
  serviceOrders         serviceOrder[]

  @@map("User")
}

model workSchedule {
  id        String   @id @default(cuid())
  dayOfWeek Int      @unique
  dayName   String
  startTime String?
  endTime   String?
  isWorkDay Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("WorkSchedule")
}

model projecttouser {
  A       String
  B       String
  project project @relation(fields: [A], references: [id], onDelete: Cascade)
  User    user    @relation(fields: [B], references: [id], onDelete: Cascade)

  @@unique([A, B], map: "_projecttouser_AB_unique")
  @@index([B], map: "_projecttouser_B_index")
  @@map("_projecttouser")
}

model StoreProduct {
  wcId          Int      @id
  name          String   @db.Text
  slug          String?  @db.Text
  sku           String?
  storeName     String?
  purchased     Boolean  @default(false)
  purchasedAt   DateTime?
  isMissingFromWoo Boolean @default(false)

  type          String?
  status        String?
  description   String?  @db.Text
  shortDescription String? @db.Text
  price         Float?
  regularPrice  Float?
  salePrice     Float?
  stockQuantity Int?
  stockStatus   String?
  images        String?  @db.Text 
  categories    String?  @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  keterangan    String?  @db.Text

  @@map("StoreProduct")
}

model StoreSupplier {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("StoreSupplier")
}

model serviceProduct {
  id           String   @id @default(cuid())
  name         String
  sku          String?  @unique
  price        Float
  salePrice    Float?
  stock        Float    @default(0)
  description  String?  @db.Text
  image        String?  @db.LongText
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("ServiceProduct")
}

model serviceOrder {
  id          String             @id @default(cuid())
  orderNumber String             @unique
  userId      String?
  createdAt   DateTime           @default(now())
  user        user?              @relation(fields: [userId], references: [id])
  items       serviceOrderItem[]

  @@map("ServiceOrder")
}

model serviceOrderItem {
  id           String       @id @default(cuid())
  orderId      String
  productId    String
  productName  String
  productPrice Float
  productImage String?      @db.LongText
  productSku   String?
  quantity     Float
  createdAt    DateTime     @default(now())
  order        serviceOrder @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("ServiceOrderItem")
}

